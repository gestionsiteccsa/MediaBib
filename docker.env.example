# =============================================================================
# docker.env.example - Variables d'environnement pour Docker
# =============================================================================
# Copier ce fichier vers docker.env et modifier les valeurs
# cp docker.env.example docker.env

# =============================================================================
# Django Core Settings
# =============================================================================

# SECURITY WARNING: Générer une nouvelle clé secrète pour la production !
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-in-production

# Mode debug (False en production)
DEBUG=False

# Hôtes autorisés (séparés par des virgules)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# Base de données PostgreSQL
# =============================================================================
# Ces variables sont utilisées par docker-compose.yml
# La DATABASE_URL sera construite automatiquement

POSTGRES_DB=mediabib
POSTGRES_USER=mediabib_user
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_HOST=db
POSTGRES_PORT=5432

# =============================================================================
# Superutilisateur Django (créé automatiquement au démarrage)
# =============================================================================

DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@mediabib.local
DJANGO_SUPERUSER_PASSWORD=admin123

# =============================================================================
# Email Configuration (optionnel)
# =============================================================================

# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=noreply@example.com
# EMAIL_HOST_PASSWORD=your-email-password
# EMAIL_USE_TLS=True

# =============================================================================
# Redis / Celery (optionnel - pour tâches asynchrones)
