# =============================================================================
# EditorConfig - Configuration universelle pour tous les éditeurs
# =============================================================================
# https://editorconfig.org

root = true

# Paramètres par défaut pour tous les fichiers
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Python
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript / TypeScript
[*.{js,ts,jsx,tsx}]
indent_size = 2

# HTML / Templates Django
[*.{html,htm}]
indent_size = 2

# CSS / SCSS
[*.{css,scss,sass}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Makefiles (nécessite des tabulations)
[Makefile]
indent_style = tab
indent_size = 4

# Configuration files
[*.{ini,cfg,toml}]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# Git
[.git*]
indent_size = 4

