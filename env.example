# =================================
# MediaBib - Configuration Environment
# =================================
# Copy this file to .env and fill in your values
# cp env.example .env (Linux/Mac)
# copy env.example .env (Windows)
# =================================

# =================================
# Django Core Settings
# =================================

# SECURITY WARNING: Generate a new secret key for production!
# You can generate one with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-in-production

# Debug mode (True for development, False for production)
DEBUG=True

# Allowed hosts (comma-separated)
# Example: localhost,127.0.0.1,yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# =================================
# Database Configuration
# =================================

# SQLite is used by default for local development
# For production, use PostgreSQL:
# DATABASE_URL=postgres://user:password@localhost:5432/mediabib

# MySQL example:
# DATABASE_URL=mysql://user:password@localhost:3306/mediabib

# =================================
# Email Configuration (optional)
# =================================

# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=noreply@example.com
# EMAIL_HOST_PASSWORD=your-email-password
# EMAIL_USE_TLS=True

# =================================
# Redis / Celery (optional - for async tasks)
# =================================

# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/1

# =================================
# Z39.50 / External Services (optional)
# =================================

# BnF Z39.50 Server
# BNF_Z3950_HOST=z3950.bnf.fr
# BNF_Z3950_PORT=2211
# BNF_Z3950_DATABASE=TOUT

# =================================
# SMS Gateway (optional)
# =================================

# Twilio example:
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_FROM_NUMBER=+33xxxxxxxxx

